# list IPs behind load balancer
lb() {
  for i in `aws --profile $1 elb describe-load-balancers | \
    jq -r ".LoadBalancerDescriptions[] | \
    select(.LoadBalancerName | match (\"$2\"; \"i\")) | .Instances[].InstanceId"`; do
